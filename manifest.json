{
    "manifest_version": 3,
    "name": "Word Definition Popup",
    "version": "1.4",
    "description": "Shows a popup with a word's definition when you hover over a word and press a key selected from the popup.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "web_accessible_resources": [{
      "resources": ["words-dictionary.json"],
      "matches": ["<all_urls>"]
    }]
  }
  
  
  
  
  
  